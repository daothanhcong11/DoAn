
@{
    ViewData["Title"] = "Tạo Mới Trường Học";
}

<div id="ds">
    <p>Tạo Mới Trường</p>
</div>
<div id="container-ds">
    <form action="" class="needs-validation" novalidate>
        <div class="form-group">
            <label for="uname">Tên Trường</label><br />
            <input type="text" class="form-control" id="uname" placeholder="" name="uname" required>
            <div class="invalid-feedback">Vui lòng nhập tên trường</div>
        </div><br />
        <div class="form-group">
            <label for="pwd">Tên Hiển Thị</label><br />
            <input type="text" class="form-control" id="pwd" placeholder="" name="pswd" required>
            <div class="invalid-feedback">Vui lòng nhập tên hiển thị</div>
        </div><br />
        <div class="form-group">
            <label for="pwd">Địa Chỉ</label><br />
            <input type="text" class="form-control" id="pwd" placeholder="" name="pswd" required>
            <div class="invalid-feedback">Vui lòng nhập địa chỉ</div>
        </div><br />
        <div class="form-group">
            <label for="pwd">Số Điện Thoại</label><br />
            <input type="text" class="form-control" id="pwd" placeholder="" name="pswd" required>
            <div class="invalid-feedback">Vui lòng nhập số điện thoại</div>
        </div><br /><br />
        <div class="text-center"><button type="button" class="btn btn-info"> <a asp-controller="TruongHoc" asp-action="TruongHoc">Hủy</a></button></div>
        <div class="text-center"><button class="btn btn-primary" type="submit" asp-controller="TruongHoc" asp-action="TruongHoc">Lưu</button></div>
    </form>
    <script src="~/js/checkinput.js" asp-append-version="true"></script>
</div>
<style>
    #th1 {
        border-bottom: 4px solid #fb7613;
    }
</style>

